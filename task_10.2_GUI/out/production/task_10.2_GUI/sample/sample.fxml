<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="300" prefWidth="400" style="-fx-background-color: #F5A9F2#F5A9F2;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <TextArea fx:id="userListTextArea" editable="false" prefHeight="300" prefWidth="125" style="-fx-border-width: 10px; -fx-background-color: #F5A9F2#F5A9F2;">
      <font>
         <Font name="Courier" size="13.0" />
      </font></TextArea>
   <VBox alignment="center" prefHeight="300" prefWidth="275" style="-fx-background-color: #F5A9F2#F5A9F2;">
      <children>
         <TextArea fx:id="textArea" editable="false" prefHeight="250" prefWidth="400" style="-fx-background-color: #F5A9F2#F5A9F2;">
            <font>
               <Font name="Courier" size="13.0" />
            </font>
         </TextArea>
         <HBox prefHeight="25" prefWidth="300">
            <children>
               <TextField fx:id="textField" onAction="#send" prefHeight="30.0" prefWidth="248.0">
                  <font>
                     <Font name="Courier" size="13.0" />
                  </font></TextField>
               <Button mnemonicParsing="false" onAction="#send" prefHeight="30.0" prefWidth="153.0" style="-fx-background-color: #F5A9F2#F5A9F2; -fx-border-color: black; -fx-border-radius: 5;" text="Отправить" textAlignment="CENTER">
                  <font>
                     <Font name="Comic Sans MS" size="13.0" />
                  </font></Button>
            </children>
         </HBox>
         <HBox prefHeight="42.0" prefWidth="275.0">
            <children>
               <Button fx:id="connectBtn" onAction="#connect" prefHeight="30.0" prefWidth="140.0" style="-fx-background-color: #F5A9F2#F5A9F2; -fx-border-color: black; -fx-border-radius: 5;" text="Подключиться">
                  <font>
                     <Font name="Comic Sans MS" size="13.0" />
                  </font>
               </Button>
               <Button fx:id="disconnectBtn" onAction="#disconnect" mnemonicParsing="false" prefHeight="30.0" prefWidth="144.0" style="-fx-background-color: #F5A9F2#F5A9F2 #F5A9F2#F5A9F2; -fx-border-color: black; -fx-border-radius: 5;" text="Отключиться">
                  <font>
                     <Font name="Comic Sans MS" size="13.0" />
                  </font>
               </Button>
            </children>
         </HBox>
      </children>
   </VBox>
</HBox>

